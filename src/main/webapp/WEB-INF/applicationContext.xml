<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<beans:bean id="appClienteDetailsService" class="com.mobil.security.AppClienteDetailsService" />
	<beans:bean id="appFuncionarioDetailsService"
		class="com.mobil.security.AppFuncionarioDetailsService" />

	<beans:bean id="authenticationListener" class="com.mobil.listener.AuthenticationListener" />

	<http pattern="/resources/**" security="none" />
	<http pattern="/" security="none" />
	<http pattern="/cadastro" security="none" />

	<http auto-config="true" use-expressions="true">
		<!-- <intercept-url pattern="/" access="isAuthenticated()" /> -->
		<intercept-url pattern="/admin/**" access="hasAnyRole('ADMIN')" />
		<!-- <intercept-url pattern="/**" access="denyAll" /> -->

		<form-login login-page='/login' authentication-failure-url="/login?error=true"
			authentication-success-handler-ref="authenticationListener" />
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="appClienteDetailsService">
		</authentication-provider>
		<authentication-provider user-service-ref="appFuncionarioDetailsService">
		</authentication-provider>
	</authentication-manager>

</beans:beans>